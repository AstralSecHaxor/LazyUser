if [ "$(uname -o | tr '[:upper:]' '[:lower:]')" == "android" ]; then
  conf_dir="/data/data/com.termux/files/usr/bin"
else
  conf_dir="/usr/bin"
fi

if [ -e /usr/lib/sudo ]; then
  sudo python3 "$conf_dir/LazyUser/lazyuser.py"
else
  python3 "$conf_dir/LazyUser/lazyuser.py"
fi

exit